{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "sourceRoot": "lib",
    "sourceMap": true,
    "baseUrl": "lib",
    "allowJs": true
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}
