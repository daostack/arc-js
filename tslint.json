{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "interface-name": [
      false,
      "always-prefix"
    ],
    "max-classes-per-file": [
      false,
      1
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "no-unused-expression": [
      true,
      "allow-fast-null-checks"
    ],
    "no-unused-variable": true,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never",
        "esSpecCompliant": true
      }
    ],
    "array-type": [
      true,
      "generic"
    ]
  },
  "rulesDirectory": []
}
